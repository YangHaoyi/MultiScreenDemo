<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="#1FA67B"
    android:layout_gravity="bottom|right"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPresentationZoomIn"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="放大地图"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCutLine"
        />

    <TextView
        android:id="@+id/tvPresentationToSearch"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="搜索页"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCutLine"/>

    <TextView
        android:id="@+id/tvPresentationDoSearch"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="搜索"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCutLine"/>

    <TextView
        android:id="@+id/tvPresentationSearchBack"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="搜索返回"/>


</LinearLayout>